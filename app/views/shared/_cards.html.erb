<div class="row scroll-overflow">
  <% @songs.each do |song| %>
    <div class="col-xs-12 col-md-12">
      <div class="card">
        <% if song.artist.picture.nil? %>
          <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1453738773917-9c3eff1db985?ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80');">
          </div>
        <% else %>
          <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= song.artist.picture %>);">
          </div>
        <% end %>
        <div class="card-infos">
          <div class="card-details">
            <div class="card-name">
              <h2><%= song.title %> - <%= song.artist.name %> <%= link_to("Link", song_path(song.id), class:"card-link")  %></h2>

            </div>
            <div class="card-events">
              <h6 style="margin-bottom: 0px;"><strong><%= song.level.name %></strong></h6>

            </div>
          </div>
        </div>

      </div>
    </div>
  <% end %>
</div>
